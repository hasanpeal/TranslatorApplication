<%- include('./partials/header.ejs') %>



<div class="px-5 text-center bg-body-tertiary" bis_skin_checked="1">
    <div class="container py-5" bis_skin_checked="1">
      <h2 class="text-body-emphasis"> English</h2>
      <h3 class="col-lg-8 mx-auto lead">
        <%= texts %>
      </h3>
    </div>
</div>

<div class="px-5 text-center bg-body-tertiary" bis_skin_checked="1">
    <div class="container py-5" bis_skin_checked="1">
      <h2 class="text-body-emphasis"> <%= l %></h2>
      <h3 class="col-lg-8 mx-auto lead">
        <%= ans %>
      </h3>
    </div>
</div>

<div class="px-5 text-center bg-body-tertiary" bis_skin_checked="1">
    <div class="container py-5" bis_skin_checked="1">
        <button id="ad" type="button" class="btn btn-outline-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-mic" viewBox="0 0 16 16">
                <path d="M3.5 6.5A.5.5 0 0 1 4 7v1a4 4 0 0 0 8 0V7a.5.5 0 0 1 1 0v1a5 5 0 0 1-4.5 4.975V15h3a.5.5 0 0 1 0 1h-7a.5.5 0 0 1 0-1h3v-2.025A5 5 0 0 1 3 8V7a.5.5 0 0 1 .5-.5"/>
                <path d="M10 8a2 2 0 1 1-4 0V3a2 2 0 1 1 4 0zM8 0a3 3 0 0 0-3 3v5a3 3 0 0 0 6 0V3a3 3 0 0 0-3-3"/>
            </svg> H
        </button>
        <audio id="audioPlayer" src="test.mp3" type="audio/mpeg"></audio>
    </div>
</div>

<script>
    document.getElementById("ad").addEventListener("click", function() {
        var audio = document.getElementById("audioPlayer");
        audio.play();
    });
</script>

<div class="px-5 text-center bg-body-tertiary pb-5" bis_skin_checked="1">
    <div class="container py-5" bis_skin_checked="1">
      <h2 class="text-body-emphasis pb-3"> Translation History </h2>
        <% if (locals.arr1 && locals.arr2) { %>
            <% for (var i = 0; i < arr1.length; i++) { %>
            <div class="px-5 text-center bg-body-tertiary" bis_skin_checked="1">
                <h3 class="text-body-emphasis"><%= arr1[i] %></h3>
                <h3 class="col-lg-8 mx-auto lead"><%= arr2[i] %></h3>
            </div>
            <% } %>
        <% } %>
    </div>
    <form action="/delete-history" method="GET">
        <div class="px-5 text-center bg-body-tertiary" bis_skin_checked="1">
            <div class="container" bis_skin_checked="1">
                <button type="submit" class="btn btn-outline-danger"> Clear History </button>
            </div>
        </div>
    </form>
</div>

<%- include('./partials/footer.ejs') %>